<!DOCTYPE html>
<html lang="en">

<%- include("../partials/header")%>
    <!-- head -->
    <style>
        a.btn.btn-success {
            margin-left: 875px;
        }
    </style>

    <body>
        <div id="app">
            <div class="main-wrapper">
                <!-- navbar -->
                <%- include("../partials/navbar")%>

                    <!--End navbar -->
                    <!-- Sidebar -->
                    <%- include("../partials/sidebar")%>
                        <!--End Sidebar -->
                        <!-- Main Content -->
                        <div class="main-content" style="min-height: 637px;">
                            <section class="section">
                                <div class="section-header">
                                    <h1> Lesson View</h1>
                                    <div class="section-header-breadcrumb">
                                        <div class="breadcrumb-item active"><a href="/admin/dashboard">Dashboard</a>
                                        </div>
                                        <div class="breadcrumb-item"><a href="/admin/listshop"> Listing</a>
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6 col-lg-12">
                                        <div class="card">
                                            <form class="form-horizontal" id="basic-form" action="#"
                                                enctype="multipart/form-data" method="post">
                                                <fieldset class="content-group">
                                                    <div class="card-header">
                                                        <h4>Lesson Details </h4>
                                                    </div>

                                                    <div class="col-lg-10">
                                                        <label for="" class="form-label"> Instructor Name</label>
                                                        <input type="text" value=" <%=view_user.user_detail.username%>"
                                                            class="form-control" disabled>
                                                    </div>
                                                    <div class="col-lg-10">
                                                        <label for="" class="form-label">Title </label>
                                                        <input type="text" value=" <%=view_user.title%>"
                                                            class="form-control" disabled>
                                                    </div>
                                                    <div class="col-lg-10">
                                                        <label for="" class="form-label"> Description</label>
                                                        <input type="text" value=" <%=view_user.description%>"
                                                            class="form-control" disabled>
                                                    </div>
                                                    <div class="col-lg-12">
                                                        <label for="" class="form-label"> Video</label>

                                                        <div class="row" style="padding-left: 10px;">

                                                            <% view_user.lesson_videos.forEach((key,i)=>{%>
                                                                <div class="col-lg-3 col-dm-6 col-12">
                                                                    <video width="220" height="140" controls
                                                                        src="/images/lesson/<%=key.videos%>" type="">
                                                                    </video>
                                                                </div>


                                                                <%})%>
                                                        </div>


                                                        <div class="col-lg-10 text-right my-3">
                                                            <a style=" display: inline-block;margin-bottom:5px;"
                                                            href="/admin/listlesson " class=" btn btn-success ml-0"><i
                                                                class=""></i>Back</a>
                                                        </div>

                                                    </div>


                                        </div>
                                        <br>
                                        <br>
                                        <td>
                                      
                                        </td>
                                    </div>
                                </div>
                            </section>
                        </div>
            </div>
            <div class="text-right">

                <!-- Main content -->
                <div class="content-wrapper">
                    <!-- Content area -->
                    <!--  End Main Content -->
                    <!-- footer -->
                    <%- include("../partials/footer")%>
                        <!--End  footer -->
                </div>
    </body>
    <script>
        setTimeout(function () {
            $("div.msg").fadeOut();
        }, 2000);
    </script>

</html>