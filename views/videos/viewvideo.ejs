<!DOCTYPE html>
<html lang="en">

<%- include("../partials/header")%>
    <!-- head -->
    <style>
        a.btn.btn-success {
            margin-left: 875px;
        }
    </style>

    <body>
        <div id="app">
            <div class="main-wrapper">
                <!-- navbar -->
                <%- include("../partials/navbar")%>

                    <!--End navbar -->
                    <!-- Sidebar -->
                    <%- include("../partials/sidebar")%>
                        <!--End Sidebar -->
                        <!-- Main Content -->
                        <div class="main-content" style="min-height: 637px;">
                            <section class="section">
                                <div class="section-header">
                                    <h1> Shop View</h1>
                                    <div class="section-header-breadcrumb">
                                        <div class="breadcrumb-item active"><a href="/admin/dashboard">Dashboard</a>
                                        </div>
                                        <div class="breadcrumb-item"><a href="/admin/listshop"> Listing</a>
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6 col-lg-12">
                                        <div class="card">
                                            <form class="form-horizontal" id="basic-form" action="#"
                                                enctype="multipart/form-data" method="post">
                                                <fieldset class="content-group">
                                                    <div class="card-header">
                                                        <h4>Shop Details </h4>
                                                    </div>
                                                    <div class="form-group px-4 row">
                                                        <div class="col-12">
                                                              <label class="control-label form-label text-left mb-3">Video
                                                            <span class="text-danger">*</span></label>
                                                        </div>
                                                      
                                                        <div class="col-lg-10">
                                                            <%if(view.type == 1){%>
                                                                <iframe width="320" height="240" src="<%=view.url%>" title="12K HDR 120fps Dolby Vision with Calming Music (Color Life)" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                                                                <%}else{%>
                                                                <video id="myVideo" width="320" height="240" controls src="<%=view.url%>" type="video/mp4">
                                                                  <%}%>
                                                                
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-10">
                                                        <label for="" class="form-label"> Title</label>
                                                        <input type="text" value=" <%=view.title%>" class="form-control" disabled>
                                                    </div>
                                                    <div class="col-lg-10">
                                                        <label for="" class="form-label">Description </label>
                                                        <input type="text" value=" <%=view.description%>" class="form-control" disabled>
                                                    </div>
                                                    <div class="col-lg-10">
                                                        <label for="" class="form-label"> Url</label>
                                                        <input type="text" value=" <%=view.url%>" class="form-control" disabled>
                                                    </div>
                                                    <div class="col-lg-10 text-right my-3">
                                                        <a style=" display: inline-block;margin-bottom:5px;"
                                                        href="/admin/videolist " class=" btn btn-success ml-0"><i
                                                            class=""></i>Back</a>
                                                    </div>
                                        </div>
                                    </div>
                            </section>
                        </div>
            </div>
            <div class="text-right">

                <!-- Main content -->
                <div class="content-wrapper">
                    <!-- Content area -->
                    <!--  End Main Content -->
                    <!-- footer -->
                    <%- include("../partials/footer")%>
                        <!--End  footer -->
                </div>
    </body>
    <script>
        setTimeout(function () {
            $("div.msg").fadeOut();
        }, 2000);
    </script>

</html>